				<text class="name">{{item.nm}}</text>
				<text class="type">{{item.cat}}</text>
				<text class="actor">{{item.desc}}</text>
				<text class="count">{{item.showInfo}}</text>
			</view>
			<!-- 状态 -->
			<view class="status">
				<view class="extra">
					{{item.sc}}<text>分</text>
