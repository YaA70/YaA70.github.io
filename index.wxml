	<navigator url="./index" hover-class="none" class="location">北京</navigator>
	<!-- 切换 -->
	<view class="tabs">
		<text catchtap='handleTap' data-active='hot' class="{{active=='hot'?'current':''}}">热映</text>
	</view>
	<!-- 搜索 -->
	<navigator url="./index" hover-class="none" class="search"></navigator>
</view>

